{
    "version": 2,
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "routes": [
        { 
            "src": "/assets/(.*)", 
            "dest": "/assets/$1" 
        },
        {
            "src": "/api/(.*)",
            "dest": "/api/$1"
        },
        { 
            "src": "/(.*\\.(js|css|ico|png|jpg|jpeg|svg|gif)$)",
            "dest": "/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ]
}